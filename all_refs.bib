@techreport{Siegelman,
abstract = {The ocean is the largest solar energy collector on Earth. The amount of heat it can store is modulated by its complex circulation, which spans a broad range of spatial scales, from meters to thousands of kilometers. In the classical paradigm, fine oceanic scales, with size less than 20 km, are thought to drive a significant downward heat transport from the surface to the ocean interior, increasing oceanic heat uptake. Here we use a combination of satellite and in situ observations in the Antarctic Circumpolar Current to diagnose oceanic vertical heat transport. Results explicitly demonstrate how deep-reaching submesoscale fronts, with a size smaller than 20 km, are generated by mesoscale eddies, with a size of 50-300 km. In contrast with the classical paradigm, these submesoscale fronts are shown to drive an anomalous upward heat transport from the ocean interior back to the surface that is larger than other contributions to vertical heat transport and of comparable magnitude to air-sea fluxes. This effect can remarkably alter oceanic heat uptake and will be strongest in eddy-rich regions such as the Antarctic Circumpolar Current, the Kuroshio Extension, and the Gulf Stream, all of which are key players in the climate system. Vertical heat transport is one of the key mechanisms by which the ocean regulates Earth's climate. Munk and Wunsch 1 first postulated that vertical heat transport is balanced by an upward component due to the large-scale mean flow ({\textgreater}300 km) and a downward component explained by fine-scale diffusive processes ({\textless}20 km). However, recent studies 2, 3 highlighted the importance of mesoscale eddies (50-300 km) for vertical heat transport. Thus, global vertical heat transport by the mean flow and diffusion are now thought to be both downwards and balanced by an upward eddy heat flux, with the mean and eddy},
author = {Siegelman, Lia and Klein, Patrice and Rivi{\`{e}}re, Pascal and Thompson, Andrew F and Torres, Hector and Flexas, Mar and Menemenlis, Dimitris},
booktitle = {Nature Geoscience},
file = {:Users/antonimmo/Library/Application Support/Mendeley Desktop/Downloaded/Siegelman et al. - Unknown - Enhanced upward heat transport at deep.pdf:pdf},
title = {{Enhanced upward heat transport at deep}}
}
@techreport{Fong,
abstract = {In an effort to understand the meaning of the intermediate representations captured by deep networks, recent papers have tried to associate specific semantic concepts to individual neural network filter responses, where interesting correlations are often found, largely by focusing on ex-tremal filter responses. In this paper, we show that this approach can favor easy-to-interpret cases that are not necessarily representative of the average behavior of a representation. A more realistic but harder-to-study hypothesis is that semantic representations are distributed, and thus filters must be studied in conjunction. In order to investigate this idea while enabling systematic visualization and quantification of multiple filter responses, we introduce the Net2Vec framework , in which semantic concepts are mapped to vectorial embeddings based on corresponding filter responses. By studying such embeddings, we are able to show that 1., in most cases, multiple filters are required to code for a concept , that 2., often filters are not concept specific and help encode multiple concepts, and that 3., compared to single filter activations, filter embeddings are able to better characterize the meaning of a representation and its relationship to other concepts.},
author = {Fong, Ruth and Vedaldi, Andrea},
file = {:Users/antonimmo/Library/Application Support/Mendeley Desktop/Downloaded/Fong, Vedaldi - Unknown - Net2Vec Quantifying and Explaining how Concepts are Encoded by Filters in Deep Neural Networks.pdf:pdf},
