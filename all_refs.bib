issn = {0022-3670},
journal = {Journal of Physical Oceanography},
month = {mar},
number = {3},
pages = {433--460},
title = {{Geographical Variability of the First Baroclinic Rossby Radius of Deformation}},
url = {http://journals.ametsoc.org/doi/abs/10.1175/1520-0485{\%}281998{\%}29028{\%}3C0433{\%}3AGVOTFB{\%}3E2.0.CO{\%}3B2},
