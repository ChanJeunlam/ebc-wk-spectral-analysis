file = {:Users/antonimmo/Library/Application Support/Mendeley Desktop/Downloaded/Bachman et al. - 2017 - Mesoscale and Submesoscale Effects on Mixed Layer Depth in the Southern Ocean.pdf:pdf},
issn = {15200485},
journal = {Journal of Physical Oceanography},
keywords = {Mesoscale processes,Mixed layer,Ocean models,Southern Ocean,Subgrid-scale processes},
month = {sep},
number = {9},
pages = {2173--2188},
title = {{Mesoscale and submesoscale effects on mixed layer depth in the Southern Ocean}},
url = {http://journals.ametsoc.org/doi/10.1175/JPO-D-17-0034.1},
