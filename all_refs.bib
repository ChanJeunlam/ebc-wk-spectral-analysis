issn = {0148-0227},
journal = {Journal of Geophysical Research},
keywords = {Density compensation,Mixed layer,Mixed layer depth criterion},
month = {dec},
number = {C12},
pages = {C12003},
publisher = {John Wiley {\&} Sons, Ltd},
title = {{Mixed layer depth over the global ocean: An examination of profile data and a profile-based climatology}},
url = {http://doi.wiley.com/10.1029/2004JC002378},
volume = {109},
year = {2004}
